<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:text="Xác Nhận Đặt Hàng"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/tv_tonggiadathang"
            android:text="Món ĂN"/>
        <TextView
            android:textSize="19dp"
            android:id="@+id/tv_tonggiadathang"
            android:textStyle="bold"
            android:layout_toStartOf="@id/vnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#3F51B5"
            android:text="1000000"/>
        <TextView
            android:id="@+id/vnd"
            android:textStyle="bold"
            android:textSize="19dp"
            android:textColor="#3F51B5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="  VNĐ"/>

    </RelativeLayout>

    <TextView
        android:textSize="17dp"
        android:id="@+id/tv_tenmonandathang"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza phô mai x1"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa Chỉ Nhận Hàng"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:textSize="17dp"
        android:id="@+id/tv_diachidathang"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bình Phú, Thạch Thất, Hà Nội"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_huy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#efefef"
            android:layout_marginEnd="10dp"
            android:text="Hủy"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_xacnhan"
            android:layout_width="0dp"
            android:background="#FF5722"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Xác Nhận"/>
    </LinearLayout>

</LinearLayout>